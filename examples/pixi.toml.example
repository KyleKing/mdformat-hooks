# Example pixi configuration for mdformat-mdsf
# Save as pixi.toml in your project root

[project]
name = "my-docs"
version = "0.1.0"
channels = ["conda-forge"]
platforms = ["linux-64", "osx-64", "osx-arm64", "win-64"]

[dependencies]
# Required: mdsf for code formatting
mdsf = "*"

# Optional: Python tools for development
python = ">=3.10"

[pypi-dependencies]
# mdformat and this plugin
mdformat = "*"
mdformat-mdsf = "*"

[tasks]
format = "mdformat *.md"
check = "mdformat --check *.md"
